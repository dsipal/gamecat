<div id="login" class="center-vertical">
    <form method="post" class="card card-body bg-light">
        <h2>Hello!</h2>
        <h6>Please Login To Your Account</h6>
        <div class="form-group"><label>Username</label><input type="text" id="user-tf" name="username" class="form-control"></div>
        <div class="form-group"><label>Password</label><input type="password" id="pass-tf" name="password" class="form-control"></div>
        <div id="row1"><button type="button" id="btn_remember" class="btn btn-light btn-left"><span class="fa fa-check-square"></span>Remember Me</button><button type="submit" id="btn_sign_in" class="btn btn-primary"><span class="fa fa-lock"></span>Sign In</button></div>
        <hr>
        <div class="btm-links">
            <div id="forgot-password"><a href="#">Forgot Your Password?</a></div>
            <div id="create-account"><a href="/signup">Create An Account</a></div>
        </div>
    </form>
</div>
