{{#section 'head'}}
    <link rel="stylesheet" href="/css/prize.css">
{{/section}}

{{#section 'body_scripts'}}
    <script src="/js/views/prize.min.js"></script>
{{/section}}

<section class="container">
    <div class="container-header">
        <div class="row">
            <img class="col-12 img-fluid" src="/img/layout/shoppage.svg">
            <h1 class="col-12 text-center">Shop</h1>
        </div>
    </div>

    <div class="row prize">
        <img class="col-lg-6 prize-img" src="{{prize.image_path}}" alt="{{prize.name}}" />
        <div class="col-lg-6 prize-info">
            <h1 class="row prize-name">{{prize.name}}</h1>

            <form class="row form form-control form-dark prize-form" action="/shop/buy" method="post">
                <input type="hidden" name="product" value="{{prize._id}}">
                <div class="form-group row">
                    <div class="col-4">
                        <select name="option" id="option">
                            {{#each prize.options }}
                                <option value="{{this.point_cost}}" data-dollarvalue="{{this.dollar_value}}">${{this.dollar_value}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="col-4 point-container">
                        <span id="point-cost">{{prize.options.[0].point_cost}} </span><img src="/img/crystal.svg" alt="crystals" class="crystal-ico" />
                    </div>

                    <div class="col-4">
                        {{#if udata}}
                            <input type="submit" value="Buy" class="btn btn-primary">
                        {{/if}}

                    </div>

                </div>


            </form>

            <p class="row prize-desc">{{prize.description}}</p>


        </div>


    </div>



</section>
