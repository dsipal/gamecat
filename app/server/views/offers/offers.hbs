{{#section 'head'}}
    <meta property="og:url" content="https://www.gamecat.co/offers/surveys" />
    <meta property="og:description" content="Complete survey, video, and trial offers to make points you can redeem for giftcards that'll up your game." />
    <meta name="referrer" content="no-referrer" />
    <link rel="stylesheet" href="/css/offer-page.min.css">
{{/section}}

{{#section 'body_scripts'}}
    <script src="/js/views/offers.min.js"></script>
{{/section}}
{{>widgets/dailyBonus user=udata}}
<section class="container">
    {{>container_header header_text="Surveys"}}
    {{>widgets/eventNotifier event=event modifierText=modifierText}}

    <ul class="nav nav-tabs" id="offers-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link nav-fill nav-justify active" id="surveys-tab" data-toggle="tab" aria-controls="surveys" data-category="[17,20]"  href="#surveys">Surveys</a>
        </li>
        <li class="nav-item">
            <a class="nav-link nav-fill nav-justify" id="videos-tab" data-toggle="tab" aria-controls="videos" data-category="[19]"  href="#videos">Videos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link nav-fill nav-justify" id="trials-tab" data-toggle="tab" aria-controls="trials" data-category="[22]"  href="#trials">Free Trials</a>
        </li>
        <li class="nav-item">
            <a class="nav-link nav-fill nav-justify" id="shopping-tab" data-toggle="tab" aria-controls="shopping" data-category="[21,25]"  href="#shopping">Premium</a>
        </li>
    </ul>

    <div class="tab-content" id="offersContent" data-userid="{{udata._id}}" data-userlevel="{{udata.level}}" data-event-modifier="{{event.modifier}}">
        <div class="tab-pane fade show active" id="surveys" role="tabpanel" aria-labelledby="surveys-tab" data-page="0">
            <ul class="row offer-list">
            </ul>
        </div>
        <div class="tab-pane fade" id="videos" role="tabpanel" aria-labelledby="videos-tab" data-page="0">
            <ul class="row offer-list">
            </ul>
        </div>
        <div class="tab-pane fade" id="trials" role="tabpanel" aria-labelledby="trials-tab" data-page="0">
            <ul class="row offer-list">
            </ul>
        </div>
        <div class="tab-pane fade" id="shopping" role="tabpanel" aria-labelledby="shopping-tab" data-page="0">
            <ul class="row offer-list">
            </ul>
        </div>
    </div>
    <div id="infinite-trigger"></div>
    <div class="row">
        <div id="adblock-off">
            <img src="/img/layout/adblock.svg">
            <h1>You need to turn off adblock in order to see surveys.</h1>
        </div>
    </div>
</section>
