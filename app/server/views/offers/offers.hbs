{{#section 'head'}}
    <meta name="referrer" content="no-referrer" />
    <link rel="stylesheet" href="/css/offer-page.css">
{{/section}}

{{#section 'body_scripts'}}
    <script src="/js/views/offers.min.js"></script>
{{/section}}

<section class="container">
    <div class="container-header">
        <div class="row">
            <img class="col-12 img-fluid" src="/img/layout/surveypage.svg">
            <h1 class="col-12 text-center">Surveys</h1>
        </div>
    </div>
    <ul class="row offer-list" data-subid1="{{subid1}}">
        <div id="adblock-off">
            <img src="/img/layout/adblock.svg">
            <h1>You need to turn off adblock in order to see surveys.</h1>
        </div>
    </ul>
    <div id="infinite-trigger"></div>
</section>
