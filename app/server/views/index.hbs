{{#section 'head'}}
    <link rel="stylesheet" href="/css/index.css">
{{/section}}

{{#section 'body_scripts'}}
    <script src="/js/views/signup.js"></script>
    <script src="/js/controllers/signupController.js"></script>
    <script src="/js/form-validators/accountValidator.js"></script>
{{/section}}

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">
            Welcome to Gamecat.
        </h1>
    </div>
        <div class="row index-info">
            <p class="index-desc">
                Want the hottest games, steam skins, and gear? Gamecat provides you with the opportunity to complete simple
                quests in exchange for gift cards.
            </p>
        </div>
    <div class="row info-bar">
        <div class="col-sm-7 graphic-panel">
            <div class="row banner-info" id="complete-quests">
                <h1 class="col-md-8">Finish quests.</h1>
                <div class="col-md-4">
                    <img id="quest-img" src="/img/quest.svg">
                </div>

            </div>
            <div class="row banner-info" id="epic-loot">
                <div class="col-md-4">
                    <img id="treasure-img" src="/img/treasure.svg">
                </div>
                <h1 class="col-md-8">Earn epic loot.</h1>
            </div>
            <div class="row banner-info" id="play-for-keeps">
                <h1>Play for keeps.</h1>
            </div>
        </div>
        <div class="col-sm-5 signup-index">
            {{>registration}}
        </div>
    </div>
</div>
